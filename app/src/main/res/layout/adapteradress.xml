<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="супермаркет КЛАСС"
        android:id="@+id/tvnameOfCompany"
        android:layout_alignTop="@+id/ivLogo"
        android:layout_alignBottom="@+id/ivLogo"
        android:layout_toRightOf="@+id/ivLogo"
        android:layout_toEndOf="@+id/ivLogo"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="г. Харьков, пр. Московский, 259"
        android:id="@+id/tvAdress"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tvnameOfCompany"
        android:layout_alignLeft="@+id/ivLogo"
        android:layout_alignRight="@+id/tvnameOfCompany"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Телефон: (057) 758-62-61"
        android:id="@+id/tvPhoneNumber"
        android:layout_alignLeft="@+id/ivLogo"
        android:layout_below="@+id/tvAdress"
        android:layout_alignRight="@+id/tvnameOfCompany"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="круглосуточно\nтехнологический перерыв с 2:00 до 5:00"
        android:id="@+id/tvFullTime"
        android:layout_below="@+id/tvPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/tvAdress"
        android:layout_alignRight="@+id/tvAdress"
        android:textColor="@color/color_type_of_buildmaterials"
        android:gravity="center"/>
</RelativeLayout>