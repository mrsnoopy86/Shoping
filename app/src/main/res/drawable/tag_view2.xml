<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorToDay"
                android:endColor="@color/colorToDay"/>
            <corners
                android:radius="2dp"/>
